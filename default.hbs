<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
    <title>{{meta_title}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{> "preloads"}}
    {{ghost_head}}
</head>

<body>
    {{#is "home"}}
        {{> "cover"}}
        <main>
            {{#if @custom.show_featured_posts}}
                {{> "featured-posts"}}
            {{/if}}
        </main>
        {{else}}
            {{> "header"}}
            <main>
                {{{body}}}
            </main>
    {{/is}}
    {{> "footer"}}
    {{ghost_foot}}
</body>

</html>